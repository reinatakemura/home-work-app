#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 Edit Account
      %h5 アカウントの編集
      -# ログアウト機能
      = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
      = link_to "トップページに戻る", :back, class: 'btn'
    .account-page__inner--right.user-form
      -#       = form_for(resource, as: resource_name, url: user_registration_path) do |f|
      = form_for(current_user) do |f|
        .field
          .field-label
            -# このf オブジェクトは、HTMLフォーム要素(テキストフィールド、パスワードフィールドなど)に対応するメソッドが呼ばれると、current_userの属性を設定するために、特別に設計されたHTMLを返します
            = f.label :name
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :email
          .field-input
            = f.email_field :email
        .actions
          = f.submit "Update", class: 'btn'
